exec_always --no-startup-id ~/.config/polybar/launch.sh

# =====================================================
# SECTION 9: MEDIA CONTROLS
# =====================================================

# Volume Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute				 exec --no-startup-id pactl set-sink-mute	  0 toggle

# Media Player Controls
bindsym XF86AudioPlay				 exec playerctl play
bindsym XF86AudioPause			 exec playerctl pause
bindsym XF86AudioNext				 exec playerctl next
bindsym XF86AudioPrev				 exec playerctl previous

# =====================================================
# SECTION 10: STARTUP APPLICATIONS
# =====================================================

# Compositor (picom for transparency, blur, shadows)
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf

# Notification daemon (dunst)
exec_always --no-startup-id dunst

# Auto-detect and set maximum refresh rate for all connected monitors
exec_always --no-startup-id $HOME/workspace/.files/scripts/set-max-refresh-rate.sh

# Background Image (dynamic path)
set $bgdir $HOME/workspace/UX/
set $bgmatdir $HOME/workspace/UX/
set $bgtransdir $HOME/workspace/UX/
set $favorite_background $HOME/workspace/UX/2800x1800/xerus.png
exec_always feh --bg-scale $favorite_background

# Scratchpad Terminal (press $mod+grave to show/hide)
exec --no-startup-id warp-terminal --class scratch_term

# Launch Applications
